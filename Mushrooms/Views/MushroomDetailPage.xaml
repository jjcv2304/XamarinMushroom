<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mushrooms.Views.MushroomDetailPage"
             Title="{Binding Title}">
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Common Name:" FontSize="Medium" />
        <Label Text="{Binding CommonName}" FontSize="Small"/>
        <Label Text="Scientific Name:" FontSize="Medium" />
        <Label Text="{Binding ScientificName}" FontSize="Small"/>
        
        <Label Text="Scientific Name:" FontSize="Medium" />
        <Label Text="{Binding }" FontSize="Small"/>
    </StackLayout>
</ContentPage>